<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
	<mx:Script>
		<![CDATA[
			/**
			 * Agrega el componente para espacio de trabajo  
			 */
			public function agregaEspacioTrabajo(espacio:DisplayObject):void{
				if(espacio == null){
					return;
				}
				this.removeAllChildren();
				this.addChild(espacio);
			}
		]]>
	</mx:Script>
</mx:HBox>
