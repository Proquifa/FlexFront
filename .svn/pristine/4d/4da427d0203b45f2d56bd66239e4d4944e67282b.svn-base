				}
				
				/*else if( this.menu1Cli.lista.selectedIndex == 3 )
				{
					agregaElementos( 'contratos' );
					_selecionOpcion = 'contratos';
				}*/
				/*else if( this.menu1Cli.lista.selectedIndex == 3 )
				{
					agregaElementos( 'entrega' );
					_selecionOpcion = 'entrega';
				}*/
				else
				{
					agregaElementos( 'sinDefinir' );
				}
				
				dispatchEvent(evt);
			}
			
