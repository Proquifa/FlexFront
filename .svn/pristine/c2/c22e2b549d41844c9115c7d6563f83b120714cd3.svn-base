<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:pqNet="skins.botones.pqNet.*"
		 xmlns:label="skins.skin.label.*"
		 xmlns:otros="skins.otros.*"
		 width="100%" height="100%" 
		 xmlns:vistas="vista.vistas.*" 
		 creationComplete="init(event)" 
		 resize="calc(event)"
		 xmlns:ns="vista.vistas.ev_ReportarVisita.*" 
		 xmlns:ns1="vista.vistas.ev_AtenderPoolDeVisitas.*" 
		 >
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.com.proquifa.proquifanet.rsl.vista.modelo.comun.DocumentoAdjunto;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			
			[Bindable]private var sizeFontProvee:Number;
			[Bindable]private var sizeFontLittle:Number;
			[Bindable]private var sizeGrande:Number;
			[Bindable]private var sizeXGrande:Number;
			[Bindable]public var sizeFont:Number = 15;
			
			
			private var archivoad:DocumentoAdjunto;
			[Bindable]public var asuntoA:String;
			public var motivosA:ArrayCollection = new ArrayCollection();
		
			
			protected function init(event:FlexEvent):void
			{
				
			}
			
			
			protected function calc(event:ResizeEvent):void
			{
				sizeFontLittle = (12/2005) * (unscaledWidth);
				sizeFontLittle = sizeFontLittle > 12 ? 12:sizeFontLittle;
				sizeFontLittle = sizeFontLittle < 7 ? 7:sizeFontLittle;
				
				sizeFontProvee = (20/2005) * (unscaledWidth);
				sizeFontProvee = sizeFontProvee > 20 ? 20:sizeFontProvee;
				sizeFontProvee = sizeFontProvee < 10 ? 10:sizeFontProvee;
				
				sizeFont = (16 / 2005) * (unscaledWidth);
				sizeFont = sizeFont > 16 ? 16:sizeFont;
				sizeFont = sizeFont < 12 ? 12:sizeFont;
				
				sizeGrande = (30/2005) * (unscaledWidth);
				sizeGrande = sizeFontProvee > 30 ? 24:sizeFontProvee;
				sizeGrande = sizeFontProvee < 24 ? 16:sizeFontProvee;
				
				sizeXGrande = (28/2005) * (unscaledWidth);
				sizeXGrande = sizeFontProvee > 28 ? 28:sizeFontProvee;
				sizeXGrande = sizeFontProvee < 22 ? 22:sizeFontProvee;
			}
			
			
		      public function recibeInformacion(asunto:String,motivos:ArrayCollection):void{
				 
				  asuntoA = asunto;
				 if(motivos != null && motivos.length > 0)
				 {
					 lsMotivos.dataProvider = motivos; 
					 etiqueta.visible = etiqueta.includeInLayout = true;
				 }
				 else
				 {
					 lsMotivos.dataProvider = new ArrayCollection(); 
					 etiqueta.visible = etiqueta.includeInLayout = false;
				 }
				  
				 
			
			  }
			
		
			
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" height="100%" gap="0">
		
		<s:VGroup width="100%" height="10%" maxHeight="10" id="GroDesLinea">
			
			<s:Label styleName="tab_texto_14_Helvetica" fontWeight="bold" fontSize="{sizeGrande}" color="#000000" text= "ASUNTO:"/>
			<s:Label styleName="tab_texto_14_Helvetica" fontWeight="bold" fontSize="{sizeGrande}" color="#000000" text= "{asuntoA}" />
			
		</s:VGroup> 
		
		<s:Spacer height="40" />
		
		<s:VGroup width="100%" height="5%" id="etiqueta" gap="2">
			
			<s:Label styleName="tab_texto_14_Helvetica" fontWeight="bold" fontSize="{sizeGrande}" color="#000000" text= "MOTIVOS" id="Emotivo"/>
			<s:Spacer height="6" />
			<s:Rect width="100%" height="1" id="lineaP">
				<s:fill>
					<s:SolidColor color="#424242"/>
				</s:fill>
			</s:Rect>
			
		</s:VGroup>
		
		<s:HGroup width="100%" height="85%" id="lista" >
			
			<s:List width="100%" height="100%" borderVisible="false" horizontalScrollPolicy="off"
					id="lsMotivos" contentBackgroundAlpha="0" itemRenderer="mx.com.proquifa.proquifanet.rsl.vista.vistas.plantillaProquifa.solicitudVisita.recursos.IR.IR_MotivosSolicitud" />
			
		</s:HGroup>
		
		<!--<s:HGroup width="100%" height="80%" id="textoG">
		
		<label:TituloNovecento_18 id="lblSeleccionNoPartidas" text="NO HAS AGREGADO NINGÃšN DOCUMENTO"  width="100%" height="100%" textAlign="center" verticalAlign="middle" horizontalCenter="0" color="#c2c3c9" fontSize="30" />
		</s:HGroup>
		-->
		
		<s:VGroup width="100%" height="10%" maxHeight="10" id="lineaBaja" visible="false" includeInLayout="false">
			<s:Rect width="100%" height="1" id="linea">
				<s:fill>
					<s:SolidColor color="#424242"/>
				</s:fill>
			</s:Rect>
		</s:VGroup>
		
		
		
		
	</s:VGroup>
	
</s:Group>

