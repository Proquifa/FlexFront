	<fx:Metadata>
		[Event(name="changeDate", type="mx.com.proquifa.proquifanet.rsl.vista.eventos.comun.EventoComun")]
		[Event(name="closeDate", type="mx.com.proquifa.proquifanet.rsl.vista.eventos.comun.EventoComun")]
