<?xml version="1.0" encoding="utf-8"?>
<s:ViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" 
							xmlns:mapa="mapa.*"
							firstView="vistas.login.pqLoginMobil"
							splashScreenImage="vistas.login.splashScreenPQNet"
							resizeForSoftKeyboard="true"
							persistNavigatorState="false"
							backgroundColor="#000000"
							skinClass="skin.viewNavigatorApplication.MainApplicationSkin"
							>
	
	<fx:Declarations>
		<mapa:MapaGeneralMobilVendedor/>
		<mapa:MapaVisitasVendedorMobil />
		<mapa:MapaVisitasEjecucion />
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mapa "mapa.*";
		
		s|ActionBar{
			chromeColor: #2d859b;
			titleAlign: center;
			/* paddingTop:35px; */    
		}
		
		s|ActionBar #titleDisplay
		{
			fontFamily: "Helvetica Neue";
			fontWeight:bold;
		}
		
		s|TabbedViewNavigator #tabBar 
		{
			chromeColor: #2d859b;
			cornerRadius: 0;
		}
		
		@font-face
		{
			fontFamily: Digital;
			src: url("/skin/fuentes/digital-7.ttf");
			embedAsCFF: true;
		}
		
		@font-face
		{
			fontFamily:bankGothic;
			src: url("/skin/fuentes/BankGothicLight.ttf");
			embedAsCFF:true;
		}   
		
		@font-face
		{
			fontFamily:bankGothic;
			src: url("/skin/fuentes/BankGothicMedium.ttf");
			embedAsCFF:true;
			fontWeight:bold; 
		}   
		
/* 		@font-face
		{
			fontFamily:helvetica;
			src: url("/skin/fuentes/BankGothicMedium.ttf");
			embedAsCFF:true;
			fontWeight:bold; 
		} */ 
	</fx:Style>
</s:ViewNavigatorApplication>
