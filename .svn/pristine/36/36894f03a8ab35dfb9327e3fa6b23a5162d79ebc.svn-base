								break;
							case"InsPhsUSA":
								if(resultado.nivel == 31){
									usuarioCorrecto = true;
								}
								break;
							case"direccionOperacionesComprasDespachosPHS":
								if(resultado.nivel == 4){
									usuarioCorrecto = true;
								}
								break;
							case "ventas":
								break;	
							case"directorDeComercializacion":
								if(resultado.nivel == 39){
