			[Bindable] public var padding1:Number;
			[Bindable] public var padding2:Number;
			[Bindable] public var unscaledWidthAnt:Number;
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void {
				super.updateDisplayList(unscaledWidth, unscaledHeight);
				trace(unscaledWidth);
				if(unscaledWidth != unscaledWidthAnt){
					
					padding1 = (unscaledWidth / 1771) * 90;
					padding1 = padding1 < 11 ? 10 : padding1;
					
					if(padding1>90)
						padding1 = 90;
					
					padding2 = (unscaledWidth / 1771) * 183;
					padding2 = padding2 < 83 ? 29 : padding2;
					
					if(padding2>183)
						padding2 = 183;
					
				}
				
				unscaledWidthAnt = unscaledWidth;
				
			}
			
