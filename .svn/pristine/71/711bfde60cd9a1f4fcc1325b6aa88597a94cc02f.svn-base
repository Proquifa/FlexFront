			public function set recibeClienteSeleccionado($cliente:Cliente):void{
				if ($cliente == null ) {
					return;
				}
				
				/*cmbColonia.textInput.text = "";*/
				_clienteRespaldo = ObjectUtil.copy( $cliente ) as Cliente;
				vieneDe = "inicializar";
				inicializaClienteSeleccionado($cliente);
				
			}
			
			private function inicializaClienteSeleccionado($cliente:Cliente):void{
				_cliente = ObjectUtil.copy($cliente) as Cliente;
				
				habilitaTextos(false);
				activaCambios = false;
				grpBotones.visible = this.grpBotones.includeInLayout = true;
				grpGuardarCancelar.visible = false;
				grpBotonEditar.visible = true;				
				//chkPortal.selected = _cliente.facturaPortal;
				cargarRevision();
				
				cargarCFDI(usoDeCFDI);
				cargarMetPago(metodoPago);
				
				if (_cliente.validarCFDI) {
					rdPortal.selected = _cliente.validarCFDI.tipo == "Portal";
					rdSAT.selected = _cliente.validarCFDI.tipo == "SAT";
					rdCorreo.selected = _cliente.validarCFDI.tipo == "Correos";
					
					txtPortal.text = _cliente.validarCFDI.url;
					txtPortalPassword.text = _cliente.validarCFDI.password;
					txtPortalUsuario.text = _cliente.validarCFDI.usuario;
					
					vgPrincipal.removeAllElements();
					if (_cliente.validarCFDI.correos != null ) {
						var arrayCorreos:Array = _cliente.validarCFDI.correos.split(";");
						for (var j:int = 0; j < arrayCorreos.length; j++) 
						{
							if (arrayCorreos[j].length > 0 )
								agregarCorreos(arrayCorreos[j]);
						}
					}
					
				}
				
				var objCFDI:CatalogoItem = new CatalogoItem;
				var objMetPago:CatalogoItem = new CatalogoItem;
				
				if(usoDeCFDI && usoDeCFDI.length > 0 && usoDeCFDI.getItemAt(0).valor != "--SELECCIONA CFDI--"){
					objCFDI.llave = 0;
					objCFDI.valor = "--SELECCIONA CFDI--";
					usoDeCFDI.addItemAt(objCFDI, 0);
				}
				
				if(metodoPago && metodoPago.length > 0 && metodoPago.getItemAt(0).valor != "--SELECCIONA M. DE PAGO--"){
					objMetPago.llave = 0;
					objMetPago.valor = "--SELECCIONA M. DE PAGO--";
					metodoPago.addItemAt(objMetPago, 0);
				}
				
				if(_cliente.usoCFDI != null && _cliente.usoCFDI != "")
					cmbCFDI.selectedIndex = cmbCFDI.seleccionarValor(_cliente.usoCFDI);
				else
					cmbCFDI.selectedIndex = 0;
				
				if(_cliente.metodoDePago != null && _cliente.metodoDePago != "")
					cmbMetPago.selectedIndex = cmbMetPago.seleccionarValor(_cliente.metodoDePago);
				else
					cmbMetPago.selectedIndex = 0;
				
				cargaMoneda();
				cargaFacturo();
				cargaPais();
				if(_cliente.direccionFacturacion != null){
					obtenerComboDireccion(_cliente.direccionFacturacion.codigoPostal,_cliente.direccionFacturacion.pais);
				}
				
				if (_cliente.listaComentarios)
				{
					var curr:Comentario = new Comentario();
					_comentarios = new ArrayCollection();
					var n:int=0;
					for (var i:int=0; i< _cliente.listaComentarios.length; i++)
					{
						curr = _cliente.listaComentarios[i] as Comentario;
						if (curr.seccion == "Facturacion")
						{
							curr.numero = n;
							_comentarios.addItem(curr);
							n++;
						}
					}
					mostrarComentariosActivos();
				}
				
			}
			
