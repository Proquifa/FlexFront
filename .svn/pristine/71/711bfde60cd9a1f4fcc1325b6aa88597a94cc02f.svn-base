			private function agregarCorreos(email:String):void {
				var group:Group = new Group();
				group.height = 30;
				var rect:Rect = new Rect();
				rect.percentHeight = 100;
				rect.percentWidth = 100;
				rect.fill = scVerde;
				group.addElement(rect);
				
				var hgroup:HGroup = new HGroup();
				hgroup.paddingLeft = 20;
				hgroup.paddingRight = 20;
				hgroup.gap = 20;
				hgroup.verticalAlign = "middle";
				hgroup.horizontalAlign = "center";
				hgroup.horizontalCenter = 0;
				hgroup.verticalCenter = 0;
				group.addElement(hgroup);
				var label:Label = new Label();
				label.text = email;
				label.setStyle("color","#424242");
				hgroup.addElement(label);
				
				var imagen:Image = new Image();
				imagen.source = catalogoIconosBotones.getInstance().tache_verde;
				imagen.width = 15;
				imagen.height = 15;
				imagen.addEventListener(MouseEvent.MOUSE_OVER, imagenHover);
				imagen.addEventListener(MouseEvent.MOUSE_OUT, imagenOut);
				imagen.addEventListener(MouseEvent.MOUSE_DOWN, closeMail);
				hgroup.addElement(imagen);
				
				vgPrincipal.addElement(group);
			}
			
			protected function imagenHover(event:MouseEvent):void {
				event.currentTarget.alpha = 0.7;
			}
			
			protected function imagenOut(event:MouseEvent):void {
				event.currentTarget.alpha = 1;
			}

			protected function closeMail(event:MouseEvent):void {
				trace(event);
				vgPrincipal.removeElement(event.currentTarget.parent.parent);
				
			}
			
