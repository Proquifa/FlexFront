					dispatchEvent(evt);
					
					if(((event.currentTarget as ButtonBar).selectedItem as Object).valor == 'RÃ¡pida'){
						realizarBusquedaRapida();
					}else{
						_currenVista = "tablaGrid"
						realizarBusqueda();
					}
				}
			}
