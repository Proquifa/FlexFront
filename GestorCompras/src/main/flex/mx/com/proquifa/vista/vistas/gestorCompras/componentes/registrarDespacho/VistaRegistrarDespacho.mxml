					<s:Ellipse width="10" height="10" >
						<s:fill>
							<s:SolidColor color="#de0014"/>
						</s:fill>
					</s:Ellipse>
					<label:Texto_14_Helvetica text="Fuera de Tiempo" fontSize="16"/>
