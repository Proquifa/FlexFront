<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer  xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="640" height="570" color="0xffffff">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:Rect x="0" y="2" width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#333333"/>
		</s:fill>
	</s:Rect>
	
<s:VGroup width="100%" verticalCenter="0" gap="23" horizontalAlign="center" verticalAlign="middle">
	

	<s:Label textAlign="center"  width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="36.22" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.nombre}" typographicCase="uppercase" />
	<s:Rect width="450" height="5">
		<s:fill>
			<s:SolidColor color="0x4a4a4a"/>
		</s:fill>
	</s:Rect>
	<s:VGroup gap="15" width="100%">
		<s:Label textAlign="center"  width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="31.66" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.titulo}" typographicCase="uppercase"/>
		<s:Label textAlign="center"  width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="31.66" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.puesto}" typographicCase="uppercase" />
		<s:Label textAlign="center"  width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="31.66" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.departamento}" typographicCase="uppercase" />
		<s:Label textAlign="center" width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="31.66" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.EMail}" typographicCase="uppercase" />
		<s:Label textAlign="center"  width="100%" height="42"
				fontFamily="Helvetica Neue" fontSize="31.66" fontWeight="bold" lineHeight="171.45%"
				text="{this.data.telefono}" typographicCase="uppercase" />
		<s:Label  width="100%" height="42" fontFamily="Helvetica Neue" fontSize="31.66"
			 fontWeight="bold" lineHeight="171.45%" text="{this.data.telefonoN}" textAlign="center"
			 typographicCase="uppercase"/>
	</s:VGroup>
</s:VGroup>
	
	<s:filters>
		<s:BevelFilter angle="-90" blurX="1" blurY="1" distance="3" highlightAlpha="1.0"
					   highlightColor="#999999" knockout="false" quality="2" shadowAlpha="1.0"
					   shadowColor="#000000" strength="1" type="inner"/>
	</s:filters>
						
</s:ItemRenderer>
