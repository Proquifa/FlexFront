<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="429" height="85">
	<fx:Metadata>[HostComponent("spark.components.TextInput")]</fx:Metadata>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="normalWithPrompt"/>
		<s:State name="disabledWithPrompt"/>
	</s:states>
	<s:Rect x="0" y="0" width="429" height="85" radiusX="10">
		<s:fill>
			<s:SolidColor color="#FFFFFF"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.5" angle="45.0" blurX="2" blurY="2" color="#000000"
								distance="2" hideObject="false" inner="true" knockout="false"
								quality="2" strength="1"/>
		</s:filters>
	</s:Rect>
	<s:RichText id="promptDisplay" includeIn="disabledWithPrompt,normalWithPrompt" x="5" y="5"/>
	<s:RichEditableText fontFamily="Helvetica Neue" fontWeight="bold"  id="textDisplay" x="18" y="30" width="390" height="36" fontSize="25"
						heightInLines="1" tabStops="S0 S50 S100 S150 S200 S250 S300 S350 S400"/>
</s:Skin>
