<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		
		minWidth="21" minHeight="19" >
	
	<!-- layer 1: fill -->
	<s:Rect left="0" right="0" top="0" bottom="0" height="27">
		<s:fill> 
			<s:SolidColor color="#d0cfcf" />
		</s:fill>
	</s:Rect>
	
	<!-- layer 2: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
	<s:Rect left="0" right="0" bottom="2" top="0">
		<s:fill>
			<s:SolidColor color="#ffffff" />
		</s:fill>
	</s:Rect>
	
</s:Skin>