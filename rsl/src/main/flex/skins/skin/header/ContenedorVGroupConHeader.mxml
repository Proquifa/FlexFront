<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%"
		 >
	

		<!-- layer 1: fill -->
		<s:Rect left="0" right="0" top="0" bottom="0" height="10">
			<s:fill> 
				<s:SolidColor color="#378899" />
			</s:fill>
		</s:Rect>
		
		<!-- layer 2: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
		<s:Rect left="0" right="0" bottom="0" top="10">
			<s:fill>
				<s:SolidColor color="#3E495B" />
			</s:fill>
		</s:Rect>
		
</s:Group>
