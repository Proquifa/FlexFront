<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false"
				>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	
	<s:Rect width="100%" height="100%">
		<s:stroke>
			<s:SolidColorStroke color="#cf0354" weight="1"/>
		</s:stroke>
	</s:Rect>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#FFFFFF" color.hovered="#cf0354" color.selected="#cf0354" />
		</s:fill>
	</s:Rect>
	<s:Label text="{data}" color="#cf0354" color.hovered="#FFFFFF" color.selected="#FFFFFF" width="100%" 
			 textAlign="center" paddingTop="5" paddingBottom="5" fontStyle="normal"/>
	
</s:ItemRenderer>
