<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:d="http://ns.adobe.com/fxg/2008/dt"
		width="100%" height="100%">
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Rect x="0.5" y="0.5" width="100%" height="100%" radiusX="5"
			alpha.disabled="0.5">
		<s:fill>
			<s:SolidColor color="#333333"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.2" angle="45.0" blurX="4.0" blurY="4.0" color="#FFFFFF"
								distance="4.0" hideObject="false" inner="true" knockout="false"
								quality="2" strength="1"/>
		</s:filters>
		<s:stroke>
			<s:LinearGradientStroke caps="none" joints="miter" miterLimit="4" rotation="90"
									weight="1">
				<s:GradientEntry alpha="1.0" color="#666666" ratio="0"/>
				<s:GradientEntry alpha="1.0" color="#333333" ratio="1"/>
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
	<!--<s:BitmapImage d:userLabel="caja flecha inferior izq" x="0" y="0" smooth="true"
				   source="@Embed('/assets/images/flechacerrarmenu/caja flecha inferior izq.png')"
				   alpha.disabled="0.5"/>-->
	<s:RichText id="labelDisplay" x="7" y="7" width="100%" color="#FFFFFF" fontFamily="Helvetica"
				fontSize="18" tabStops="S0" verticalAlign="middle" horizontalCenter="0"  textAlign="center"
				alpha.disabled="0.5"
				color.down="#3E85D6">
		<s:filters>
			<s:GlowFilter alpha="1.0" blurX="2" blurY="2" color="#FFFFFF" inner="false"
						  knockout="false" quality="2" strength="3"
						  color.down="#3E85D6"
						  blurX.over="5" blurY.over="5" strength.over="2"
						  strength.up="2"/>
		</s:filters>
	</s:RichText>
</s:Skin>
