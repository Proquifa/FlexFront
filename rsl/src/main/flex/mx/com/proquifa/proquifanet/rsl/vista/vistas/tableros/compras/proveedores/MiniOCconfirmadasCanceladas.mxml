					</mx:ColumnSeries>	                
				</mx:series>
				<mx:horizontalAxis>
					<mx:CategoryAxis id="vMes" categoryField="etiquetaMes" title="Meses"/>
				</mx:horizontalAxis>
				<mx:verticalAxis>
					<mx:LinearAxis id="vCantidad" baseAtZero="true" title="Cantidad de partidas"/>
				</mx:verticalAxis>
			</mx:ColumnChart>
			
