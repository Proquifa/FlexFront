<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
		<mx:Script>
		<![CDATA[
			/**
			 * Agrega el componente con un tipo de Informacion 
			 */
			public function agregaInformacion(informacion:DisplayObject):void{
				if(informacion == null){
					return;
				}
				this.removeAllChildren();
				this.addChild(informacion);
			}
		]]>
	</mx:Script>
</mx:HBox>
