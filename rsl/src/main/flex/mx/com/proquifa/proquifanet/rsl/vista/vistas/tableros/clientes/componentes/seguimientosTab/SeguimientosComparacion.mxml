							dataTipMode="single"  
							columnWidthRatio=".5"
							seriesFilters="[]"
							paddingRight="40" paddingLeft="20" paddingTop="20"
							paddingBottom="40"
							>
				<mx:series>
					<mx:ColumnSet type="stacked">
						<mx:ColumnSeries id="serieAFT"
										 yField="seguimientoAFT" 
										 showDataEffect="{fxInterpolateIn}"
